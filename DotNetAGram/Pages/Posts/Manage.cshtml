@page "{id?}"
@model DotNetAGram.Pages.Posts.EditModel
@{
    Layout = null;
    ViewData["Title"] = "Edit Post";
}

<form method="post">
    <div>
        <label asp-for="Post.Author"></label>
        <input asp-for="Post.Author" />

        <label asp-for="Post.PostDate"></label>
        <input asp-for="Post.PostDate" />
    </div>
    <div>
        <label asp-for="Post.ImageURL"></label>
        <input asp-for="Post.ImageURL" />
    </div>

    <label asp-for="Post.Description"></label>
    <textarea rows="5" asp-for="Post.Description">@Model.Post.Description</textarea>

    <button type="submit">Save</button>
</form>

<a asp-page="/Posts/Index" asp-route-id="@Model.Post.ID">Back</a>
